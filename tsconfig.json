    "moduleResolution": "Node",
    "allowJs": false,
    "strict": true,
    "declaration": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["./*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
